# API Keys
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here

# Database Configuration
DB_PATH=data/processed/properties.db

# Scraping Configuration
MAX_PAGES_PER_RUN=20
REQUEST_DELAY=5  # seconds
PREMIUM_JS_RENDERING=true
MAX_RENTALS_TO_COLLECT=200

# Scheduler Configuration
ENABLE_SALES_SCRAPING=true
ENABLE_RENTAL_SCRAPING=true
ENABLE_ADDITIONAL_RENTAL_SCRAPING=true
SALES_SCRAPE_TIME=01:00
RENTAL_SCRAPE_DAY=1
RENTAL_SCRAPE_TIME=02:00
ADDITIONAL_RENTAL_SCRAPE_TIME=03:00

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your_username
SMTP_PASSWORD=your_password
NOTIFICATION_EMAIL=your_email@example.com

# Web Interface
WEB_HOST=127.0.0.1
WEB_PORT=5000
DEBUG_MODE=true

